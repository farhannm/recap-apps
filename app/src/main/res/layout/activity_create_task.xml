<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.DashboardUser.Task.CreateTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dashboardDest"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/card_light">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/icon_arrow_dark"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Task Baru"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/main_color_black"
            android:fontFamily="@font/nexa_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/secondary_light_themes"
                android:fontFamily="@font/nexa_regular"/>

            <EditText
                android:id="@+id/txtJudulTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_bold"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_12ssp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Jam Kerja (jam)"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/secondary_light_themes"
                android:fontFamily="@font/nexa_regular"/>

            <EditText
                android:id="@+id/txtJamKerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/nexa_bold"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_12ssp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Tanggal"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/secondary_light_themes"
                android:fontFamily="@font/nexa_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal"
                    android:textColorHint="@color/secondary_light_themes"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/main_color_black"
                    android:fontFamily="@font/nexa_bold"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnDatePicker"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="@color/card_light">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_calendar"/>
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Deskripsi"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/secondary_light_themes"
                android:fontFamily="@font/nexa_regular"/>

            <EditText
                android:id="@+id/txtDeskripsiTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nexa_bold"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_12ssp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Tipe"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/secondary_light_themes"
                android:fontFamily="@font/nexa_regular"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/txtAutoCompleteType"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/my_input_layout"
                    android:fontFamily="@font/nexa_regular"
                    android:inputType="none"
                    android:text="Proggress weekday"
                    android:padding="10dp"
                    android:textColor="@color/main_color_black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveTask"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/main_color_blue"
                android:fontFamily="@font/nexa_regular"
                android:text="Create new task"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>