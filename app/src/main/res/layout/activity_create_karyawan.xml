<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.DashboardAdmin.Karyawan.CreateKaryawanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="35dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dashboardDest"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/card_light">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/icon_arrow_dark"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Tambah karyawan"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/main_color_black"
            android:fontFamily="@font/nexa_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Akun"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/main_color_black"
            android:fontFamily="@font/nexa_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexa_book"
                android:text="Email"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputEmailKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/my_input_layout"
                    android:fontFamily="@font/nexa_regular"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/main_color_black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexa_book"
                android:text="Password"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPasswordKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/my_input_layout"
                    android:fontFamily="@font/nexa_regular"
                    android:padding="10dp"
                    android:textColor="@color/main_color_black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Informasi umum"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/main_color_black"
            android:fontFamily="@font/nexa_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexa_book"
                android:text="Nama"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNamaKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/my_input_layout"
                    android:fontFamily="@font/nexa_regular"
                    android:padding="10dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/main_color_black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexa_book"
                android:text="Role"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputRoleKaryawan"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/my_input_layout"
                    android:fontFamily="@font/nexa_regular"
                    android:padding="10dp"
                    android:textColor="@color/main_color_black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexa_book"
                android:text="Phone"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/my_input_layout"
                    android:fontFamily="@font/nexa_regular"
                    android:padding="10dp"
                    android:inputType="number"
                    android:textColor="@color/main_color_black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nexa_book"
                android:text="Alamat"
                android:textColor="@color/main_color_black"
                android:textSize="@dimen/_10ssp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/my_input_layout"
                    android:fontFamily="@font/nexa_regular"
                    android:padding="10dp"
                    android:textColor="@color/main_color_black"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTambahKaryawan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/main_color_blue"
                android:fontFamily="@font/nexa_regular"
                android:text="Tambah karyawan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>