<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.DashboardAdmin.DashboardAdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logo_bara"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Halo,"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/main_color_black"
            android:fontFamily="@font/nexa_book"/>

        <TextView
            android:id="@+id/dashboardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Bara!"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/main_color_black"
            android:fontFamily="@font/nexa_bold"/>

        <TextView
            android:id="@+id/formatDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexa_regular"
            android:text="Kamis, 20 Oktober 2023"
            android:textColor="@color/secondary_light_themes"
            android:textSize="@dimen/_10sdp"
            tools:ignore="TextSizeCheck" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/main_color_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nexa_regular"
                            android:text="BARA Super Team"
                            android:textColor="@color/secondary_light_themes"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtJumlahKaryawan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:text="11 working"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:src="@drawable/ilustration_sailing"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnCreateKaryawan"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_45sdp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="@dimen/_100sdp"
                        android:backgroundTint="@color/main_color_secondary_blue"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Tambah karyawan"
                            android:drawablePadding="5dp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nexa_bold"/>
                    </com.google.android.material.card.MaterialCardView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnGetKaryawan"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_height="@dimen/_45sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="@dimen/_100sdp"
                            android:backgroundTint="@color/gray_700"
                            android:layout_marginTop="@dimen/_15sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Karyawan"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/main_color_blue"
                                android:fontFamily="@font/nexa_bold"/>
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>