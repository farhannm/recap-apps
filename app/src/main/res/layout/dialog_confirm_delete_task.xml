<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="MissingDefaultResource">


    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ilustration_wash"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nexa_bold"
                android:text="Hapus task"
                android:textAlignment="center"
                android:textColor="@color/main_color_black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textAlignment="center"
                android:fontFamily="@font/nexa_book"
                android:text="Yakin ingin menghapus task secara permanen?."
                android:textColor="@color/secondary_light_themes"
                android:textSize="@dimen/_11sdp"
                tools:ignore="TextSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHapusTask"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:backgroundTint="@color/sweet_red"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:fontFamily="@font/nexa_regular"
                android:text="Hapus"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBatalTask"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:backgroundTint="@color/card_light"
                android:fontFamily="@font/nexa_regular"
                android:text="Batal"
                android:textAllCaps="false"
                android:textColor="@color/secondary_light_themes"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>