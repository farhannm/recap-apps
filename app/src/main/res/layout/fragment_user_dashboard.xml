<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Dashboard.DashboardUser.DashboardUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logo_bara"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Halo,"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/main_color_black"
            android:fontFamily="@font/nexa_book"/>

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farhan Maulana!"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/main_color_black"
            android:fontFamily="@font/nexa_bold"/>

        <TextView
            android:id="@+id/formatDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexa_regular"
            android:text="Kamis, 20 Oktober 2023"
            android:textColor="@color/secondary_light_themes"
            android:textSize="@dimen/_10ssp"
            tools:ignore="TextSizeCheck" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/main_color_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexa_regular"
                    android:text="BARA Super Team"
                    android:textColor="@color/secondary_light_themes"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/txtTodayTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/nexa_bold"
                    android:text="Tidak task hari ini"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    tools:ignore="TextSizeCheck" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_regular"
                        android:text="Periode"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/txtPeriode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:text="..."
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@drawable/my_line"
                    android:layout_marginVertical="@dimen/_6sdp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:backgroundTint="@color/card_blue">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_8sdp"
                            android:src="@drawable/icon_clock_light"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/nexa_regular"
                            android:text="Jam toleransi"
                            android:textColor="@color/secondary_light_themes"
                            android:textSize="@dimen/_8ssp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/txtToleransi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nexa_bold"
                            android:text="0 jam"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:backgroundTint="@color/card_blue">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_8sdp"
                            android:src="@drawable/icon_watch_light"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/nexa_regular"
                            android:text="Jam kerja"
                            android:textColor="@color/secondary_light_themes"
                            android:textSize="@dimen/_8ssp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/txtJamker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nexa_bold"
                            android:text="0 jam"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:backgroundTint="@color/card_blue">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_8sdp"
                            android:src="@drawable/icon_plant_light"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/nexa_regular"
                            android:text="Total jam kerja"
                            android:textColor="@color/secondary_light_themes"
                            android:textSize="@dimen/_8ssp"
                            tools:ignore="TextSizeCheck" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTotalJam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nexa_bold"
                                android:text="0 jam"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp"
                                tools:ignore="TextSizeCheck" />

                            <TextView
                                android:id="@+id/txtIdPekerjaan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nexa_bold"
                                android:text="1"
                                android:textColor="@color/main_color_blue"
                                android:textSize="@dimen/_1ssp"
                                tools:ignore="TextSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnAddTask"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="@dimen/_100sdp"
                        android:backgroundTint="@color/main_color_secondary_blue"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Add task"
                            android:drawablePadding="5dp"
                            android:drawableEnd="@drawable/icon_add"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/nexa_bold"/>
                    </com.google.android.material.card.MaterialCardView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/btnTaskToday"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_height="@dimen/_40sdp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="@dimen/_100sdp"
                            android:backgroundTint="@color/gray_700"
                            android:layout_marginTop="@dimen/_15sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Hari ini"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/main_color_blue"
                                android:fontFamily="@font/nexa_bold"/>
                        </com.google.android.material.card.MaterialCardView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

